  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
  <meta charset="utf-8">
  <style>
    label {
      padding: 10px 40px;
      color: #ffffff;
      background-color: #dd287d;
      cursor: pointer;
      border-top-left-radius: 20px;
      border-top-right-radius: 20px;
      border-bottom-right-radius: 20px;
      border-bottom-left-radius: 20px;
    }

    input[type="file"] {
      display: none;
    }

    .box2 {
      padding: 0.5em 1em;
      margin: 2em 0;
      font-weight: bold;
      color: #6091d3;
      /*文字色*/
      background: #FFF;
      border: solid 3px #00050a;
      /*線*/
      border-radius: 10px;
      /*角の丸み*/
    }

    .box2 p {
      margin: 0;
      padding: 0;
    }

    .circle {
      border-radius: 50%;
      width: 120px;
      height: 120px;
    }

    .circle1 {
      border-radius: 50%;
      width: 32px;
      height: 32px;
    }
  </style>
